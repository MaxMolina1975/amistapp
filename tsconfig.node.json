{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    }
  },
  "include": ["vite.config.ts", "src/scripts/**/*"]
}
