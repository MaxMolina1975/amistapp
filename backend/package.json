{
  "name": "amistapp-backend",
  "version": "1.0.0",
  "description": "AmistApp Backend API Server",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "test": "jest",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "seed:postgresql": "node src/database/seed-postgresql.js",
    "db:init": "npm run migrate && npm run seed",
    "db:init:postgresql": "npm run seed:postgresql",
    "db:reset": "node src/database/reset.js && npm run db:init"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "mysql2": "^3.6.5",
    "pg": "^8.11.3",
    "better-sqlite3": "^11.8.1",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}