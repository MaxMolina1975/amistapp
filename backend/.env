# Configuración del Servidor
NODE_ENV=development
PORT=3007
HOST=localhost

# Configuración de Base de Datos
# Para producción usar: DB_TYPE=postgresql
DB_TYPE=sqlite
DB_PATH=./data/amistapp.db
# PostgreSQL config (cuando Docker esté disponible):
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=amistapp
# DB_USER=postgres
# DB_PASSWORD=postgres123

# Seguridad
JWT_SECRET=amistapp_dev_secret_key_2024_secure
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Admin por defecto
DEFAULT_ADMIN_EMAIL=admin@amistapp.cl
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_NAME=Administrador Sistema